<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Oltean_Andrei_Lab7"
             x:Class="Oltean_Andrei_Lab7.ListPage"
             Title="ListPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Save" Clicked="OnSaveButtonClicked" />
                <Button Grid.Column="1" Text="Delete" Clicked="OnDeleteButtonClicked"/>
            </Grid>
            
            <Editor Placeholder="Enter the description of the shopping list"
                    Text="{Binding Description}"
                    HeightRequest="50" >
                <Editor.Behaviors>
                    <local:ValidationBehaviour />
                </Editor.Behaviors>
            </Editor>

            <ListView x:Name="listView" Margin="20">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Description}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Add/Choose Item to buy" 
                    Margin="0,10,0,10"
                    Clicked="OnChooseButtonClicked"/>
            
            <Button Text="Delete Selected Item" 
                    BackgroundColor="Red"
                    TextColor="White"
                    Clicked="OnDeleteItemButtonClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>